{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "method": {
      "type": "enumeration",
      "enum": [
        "cod",
        "credit_card",
        "paypal",
        "bank_transfer",
        "momo",
        "vnpay"
      ]
    },
    "transaction_id": {
      "type": "text"
    },
    "amount": {
      "type": "decimal"
    },
    "status_payment": {
      "type": "enumeration",
      "enum": [
        "pending",
        "successful",
        "failed",
        "refunded"
      ]
    },
    "paid_at": {
      "type": "datetime"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "payment_id"
    }
  }
}
