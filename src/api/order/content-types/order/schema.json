    "users_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "status_order": {
      "type": "enumeration",
      "enum": [
        "đang chờ xử lý",
        "đã xử lý",
        "đã giao hàng",
        "hủy đơn hàng"
      ]
    },
    "shipping_fee": {
      "type": "decimal"
    },
    "total": {
      "type": "decimal"
    },
    "payment_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment"
    },
    "coupon_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::coupon.coupon"
    },
    "affiliate_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::affiliate.affiliate"
    },
    "canceled_at": {
      "type": "datetime"
    },
    "completed_at": {
      "type": "datetime"
    },
    "delivery_at": {
      "type": "datetime"
    }
