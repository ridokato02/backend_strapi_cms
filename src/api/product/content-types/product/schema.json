{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "categorie": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categorie.categorie",
      "inversedBy": "products"
    },
    "slug": {
      "type": "text",
      "unique": true
    },
    "brand": {
      "type": "string"
    },
    "thumbnail_url": {
      "type": "text"
    },
    "status_product": {
      "type": "enumeration",
      "enum": [
        "draft",
        "active",
        "inactive",
        "archived"
      ]
    },
    "product_variant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::product-variant.product-variant",
      "inversedBy": "product_id"
    },
    "wishlist_item": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::wishlist-item.wishlist-item",
      "mappedBy": "product_id"
    },
    "review": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::review.review",
      "mappedBy": "product_id"
    }
  }
}
