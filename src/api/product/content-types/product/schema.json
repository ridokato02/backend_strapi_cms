{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "category_id": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::categorie.categorie"
    },
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "text",
      "unique": true
    },
    "description_product": {
      "type": "text"
    },
    "price": {
      "type": "decimal"
    },
    "image_url": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "discount": {
      "type": "decimal"
    },
    "quantity": {
      "type": "biginteger"
    },
    "sold": {
      "type": "biginteger"
    },
    "status_product": {
      "type": "enumeration",
      "enum": [
        "ngừng kinh doanh",
        "kích hoạt"
      ]
    },
    "featured": {
      "type": "enumeration",
      "enum": [
        "không",
        "có"
      ]
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "product_id"
    },
    "cart_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart-item.cart-item",
      "mappedBy": "product_id"
    }
  }
}
